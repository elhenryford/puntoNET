@page "/inscripcions/delete"
@using Microsoft.EntityFrameworkCore
@using pruevaDB1.Components.Model 
@inject IDbContextFactory<pruevaDB1.Data.pruevaDB1Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Inscripcion</h2>
    <hr />
    @if (inscripcion is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">NumeroDorsal</dt>
            <dd class="col-sm-10">@inscripcion.NumeroDorsal</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">AtletaId</dt>
            <dd class="col-sm-10">@inscripcion.AtletaId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CarreraId</dt>
            <dd class="col-sm-10">@inscripcion.CarreraId</dd>
        </dl>
        <EditForm method="post" Model="inscripcion" OnValidSubmit="DeleteInscripcion" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(inscripcion is null)">Delete</button> |
            <a href="/inscripcions">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Inscripcion? inscripcion;

    [SupplyParameterFromQuery]
    private int IdInscripcion { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        inscripcion = await context.Inscripciones.FirstOrDefaultAsync(m => m.IdInscripcion == IdInscripcion);

        if (inscripcion is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteInscripcion()
    {
        using var context = DbFactory.CreateDbContext();
        context.Inscripciones.Remove(inscripcion!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/inscripcions");
    }
}
