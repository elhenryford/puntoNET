@page "/tiempoparcials/delete"
@using Microsoft.EntityFrameworkCore
@using pruevaDB1.Components.Model
@inject IDbContextFactory<pruevaDB1.Data.pruevaDB1Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>TiempoParcial</h2>
    <hr />
    @if (tiempoparcial is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">InscripcionId</dt>
            <dd class="col-sm-10">@tiempoparcial.InscripcionId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Puesto</dt>
            <dd class="col-sm-10">@tiempoparcial.Puesto</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">NumeroDorsal</dt>
            <dd class="col-sm-10">@tiempoparcial.NumeroDorsal</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ChipID</dt>
            <dd class="col-sm-10">@tiempoparcial.ChipID</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">HoraPaso</dt>
            <dd class="col-sm-10">@tiempoparcial.HoraPaso</dd>
        </dl>
        <EditForm method="post" Model="tiempoparcial" OnValidSubmit="DeleteTiempoParcial" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(tiempoparcial is null)">Delete</button> |
            <a href="/tiempoparcials">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private TiempoParcial? tiempoparcial;

    [SupplyParameterFromQuery]
    private int IdTiempo { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        tiempoparcial = await context.TiempoParcial.FirstOrDefaultAsync(m => m.IdTiempo == IdTiempo);

        if (tiempoparcial is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteTiempoParcial()
    {
        using var context = DbFactory.CreateDbContext();
        context.TiempoParcial.Remove(tiempoparcial!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/tiempoparcials");
    }
}
