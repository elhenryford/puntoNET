@page "/puntocontrols/edit"
@using Microsoft.EntityFrameworkCore
@using pruevaDB1.Components.Model
@inject IDbContextFactory<pruevaDB1.Data.pruevaDB1Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>PuntoControl</h2>
<hr />
@if (PuntoControl is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="PuntoControl" OnValidSubmit="UpdatePuntoControl" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="PuntoControl.IdPunto" value="@PuntoControl.IdPunto" />
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre:</label>
                    <InputText id="nombre" @bind-Value="PuntoControl.Nombre" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => PuntoControl.Nombre" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="orden" class="form-label">Orden:</label>
                    <InputNumber id="orden" @bind-Value="PuntoControl.Orden" class="form-control" />
                    <ValidationMessage For="() => PuntoControl.Orden" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="carreraid" class="form-label">CarreraId:</label>
                    <InputNumber id="carreraid" @bind-Value="PuntoControl.CarreraId" class="form-control" />
                    <ValidationMessage For="() => PuntoControl.CarreraId" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/puntocontrols">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int IdPunto { get; set; }

    [SupplyParameterFromForm]
    private PuntoControl? PuntoControl { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        PuntoControl ??= await context.PuntosDeControl.FirstOrDefaultAsync(m => m.IdPunto == IdPunto);

        if (PuntoControl is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdatePuntoControl()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(PuntoControl!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!PuntoControlExists(PuntoControl!.IdPunto))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/puntocontrols");
    }

    private bool PuntoControlExists(int idpunto)
    {
        using var context = DbFactory.CreateDbContext();
        return context.PuntosDeControl.Any(e => e.IdPunto == idpunto);
    }
}
