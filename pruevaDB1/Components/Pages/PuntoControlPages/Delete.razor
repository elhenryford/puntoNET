@page "/puntocontrols/delete"
@using Microsoft.EntityFrameworkCore
@using pruevaDB1.Components.Model
@inject IDbContextFactory<pruevaDB1.Data.pruevaDB1Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>PuntoControl</h2>
    <hr />
    @if (puntocontrol is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@puntocontrol.Nombre</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Orden</dt>
            <dd class="col-sm-10">@puntocontrol.Orden</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CarreraId</dt>
            <dd class="col-sm-10">@puntocontrol.CarreraId</dd>
        </dl>
        <EditForm method="post" Model="puntocontrol" OnValidSubmit="DeletePuntoControl" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(puntocontrol is null)">Delete</button> |
            <a href="/puntocontrols">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private PuntoControl? puntocontrol;

    [SupplyParameterFromQuery]
    private int IdPunto { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        puntocontrol = await context.PuntosDeControl.FirstOrDefaultAsync(m => m.IdPunto == IdPunto);

        if (puntocontrol is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeletePuntoControl()
    {
        using var context = DbFactory.CreateDbContext();
        context.PuntosDeControl.Remove(puntocontrol!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/puntocontrols");
    }
}
