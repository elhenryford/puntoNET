@page "/carreras/details"
@using Microsoft.EntityFrameworkCore
@using pruevaDB1.Components.Model
@inject IDbContextFactory<pruevaDB1.Data.pruevaDB1Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Carrera</h2>
    <hr />
    @if (carrera is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@carrera.Nombre</dd>
            <dt class="col-sm-2">Fecha</dt>
            <dd class="col-sm-10">@carrera.Fecha</dd>
            <dt class="col-sm-2">HoraInicio</dt>
            <dd class="col-sm-10">@carrera.HoraInicio</dd>
            <dt class="col-sm-2">Ubicacion</dt>
            <dd class="col-sm-10">@carrera.Ubicacion</dd>
            <dt class="col-sm-2">Cupos</dt>
            <dd class="col-sm-10">@carrera.Cupos</dd>
            <dt class="col-sm-2">cantSensores</dt>
            <dd class="col-sm-10">@carrera.cantSensores</dd>
            @if(atleta != null)
            {
                <dt class="col-sm-2">Ganador</dt>
                <dd class="col-sm-10">@atleta.Nombre</dd>
            }
        </dl>
        <div>
            <a href="@($"/carreras")">Back to List</a>
        </div>
    }
</div>

@code {
    private Carrera? carrera;
    private Atleta? atleta = null;
    private Inscripcion? inscgan;

    [SupplyParameterFromQuery]
    private int IdCarrera { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        carrera = await context.Carreras.FirstOrDefaultAsync(m => m.IdCarrera == IdCarrera);
        if(carrera.inscGanador != 0)
        {
            inscgan = await context.Inscripciones.FirstOrDefaultAsync(i => i.IdInscripcion == carrera.inscGanador);
            atleta = await context.Atletas.FirstOrDefaultAsync(a => a.IdAtleta == inscgan.AtletaId);
        }

        if (carrera is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
